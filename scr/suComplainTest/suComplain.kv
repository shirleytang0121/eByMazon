<complainInfo@GridLayout>:
    cols: 6
    userID:""
    itemID:""
    complain:""
    time:""
    padding : 5, 0
    spacing: 10, 0
    Label:
        size_hint_x:.15
        text:root.userID
    Label:
        size_hint_x:.15
        text: root.itemID
    Label:
        size_hint_x:.35
        text: root.complain
    
    Label:
        size_hint_x:.15
        text: root.time
    
    Button:
        size_hint_x:.15
        text:'Approve'
        on_press:root.approveComplain()
    Button:
        size_hint_x:.15
        text:'Reject'
        on_press:root.rejectComplain()


    
   

suComplainPage:
    BoxLayout:
        orientation: "vertical"
        padding : 15, 15

        BoxLayout:
            orientation: "horizontal"
            size_hint_y:0.1
            Label:
                size_hint_x:0.9
                text:'Review Complains'
            Button:
                size_hint_x:0.1
                text:'Go Back'
                on_press:root.back()

        

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1

            BoxLayout:
                orientation: "vertical"
                size_hint: .5, 1
                padding : 0, 15
                spacing: 10, 10
                size: 500, 30

                BoxLayout:
                    RecycleView:
                        id: complains
                        viewclass: 'complainInfo'
                        RecycleBoxLayout:
                            default_size: None, dp(30)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
        
        BoxLayout:
            orientation: "horizontal"
            size_hint_y:0.1
            Button:
                text: "Refresh"
                size_hint_x: .05
                spacing_x: 30
                on_press:root.displayComplain()
                